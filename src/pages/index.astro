---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHub from '../components/icons/GitHub.astro';
import Mail from '../components/icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Code from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
import Pdf from '../components/icons/Pdf.astro';
import Me from '../components/icons/Me.astro';
import Sobremi from '../components/Sobremi.astro';
---

<Layout title="Portafolio de PapoDev - Desarrollador y Programador Web Full Stack con 1 año de experiencia"
description="Contactame para crear tu aplicacion web o aplicacion movil.Desarrollador y Programador Web Full Stack. Experiencia de 1 año">
	<main class="px-4">
		<SectionContainer id="top" class="py-44 pb-32">
		<img src="https://avatars.githubusercontent.com/u/154916112?v=4" class="animated rounded-full size-16 mb-4" src="" alt="papodev photo"/>
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Hi, I'm PapoDev<a href="https://www.linkedin.com/in/juan-pablo-rueda-zuluaga-40b34b217/" target="_blank" rel="noopener" class="flex justify-center items-center "><Badge> Disponible para trabajar</Badge></a></h1>
		<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">Me llamo Juan Pablo Rueda Zuluaga, soy Contador Público y <span class="text-yellow-200">Desarrollador Full Stack</span>. Tengo más de 1 año de experiencia en desarrollo, y una gran pasión y disciplina para dar lo mejor de mí.<span class="opacity-80"></span></h2>

		<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/juan-pablo-rueda-zuluaga-40b34b217/">
					<LinkedIn class=" size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/JPRuedaZ">
					<GitHub class=" size-4 md:size-6" />
					GitHub
				</SocialPill>
				<SocialPill href="CV - JUAN PABLO RUEDA Z.pdf">
					<Pdf class="size-4 md:size-6" />
					Descargar CV
				  </SocialPill>
				<SocialPill href="mailto:juanpabloruedazo@gmail">
					<Mail class=" size-4 md:size-6"  />
					juanpabloruedazo@gmail.com
				</SocialPill>
		</nav>
	</SectionContainer>
	<SectionContainer id="sobremi">
		
		<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
			<Me class="size-7" />
			Sobre mi
		</h2>
		<Sobremi />
	</SectionContainer>
	</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia laboral</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="proyectos" class="py-24">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
		